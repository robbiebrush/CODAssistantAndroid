<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--ViewPage layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ViewPager.ViewPageFragment"
        android:orientation="vertical"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/teamPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/webURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:contentDescription="@string/webClickDesc"
            app:srcCompat="@drawable/ic_baseline_insert_link_24"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/title_text_large"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/home_divier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/home_divider"
            android:src="@drawable/home_divider"
            tools:ignore="ImageContrastCheck"
            android:paddingBottom="30dp"/>

        <TextView
            android:id="@+id/teamRoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/subtitle_text_large"/>
    </LinearLayout>
</ScrollView>