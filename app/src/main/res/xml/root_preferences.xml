<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/prefs_header">

        <ListPreference
            app:defaultValue="eng"
            app:entries="@array/langs_entries"
            app:entryValues="@array/langs_values"
            app:key="lang"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="default"
            app:entries="@array/fsize_entries"
            app:entryValues="@array/fsize_values"
            app:key="font"
            app:title="@string/fontSize"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/filter_header">
        <ListPreference
            app:defaultValue="overall"
            app:entries="@array/filter_entries"
            app:entryValues="@array/filter_values"
            app:key="filter"
            app:title="@string/gamemode"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>