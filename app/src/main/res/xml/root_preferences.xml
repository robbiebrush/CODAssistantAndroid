<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Preferences">

        <ListPreference
            app:defaultValue="eng"
            app:entries="@array/langs_entries"
            app:entryValues="@array/langs_values"
            app:key="lang"
            app:title="Language"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="default"
            app:entries="@array/fsize_entries"
            app:entryValues="@array/fsize_values"
            app:key="font"
            app:title="Font Size"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Filter Stats">
        <ListPreference
            app:defaultValue="overall"
            app:entries="@array/filter_entries"
            app:entryValues="@array/filter_values"
            app:key="filter"
            app:title="Game Mode"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>